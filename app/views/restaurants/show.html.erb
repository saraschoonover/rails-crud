<div class="container">
  <h1>restaurants: <%=@restaurant.name %></h1>


  <p>Rating:  <%= "⭐️" * @restaurant.rating %></p>
  <p>Located in: <%= @restaurant.address %></p>

  <%= link_to "Link to see Chef", chef_restaurant_path(@restaurant) %>
  <%= link_to "Back to restaurants", restaurants_path %>
  <%= link_to "Edit", edit_restaurant_path %>
  <%= link_to "Delete",
    restaurant_path(@restaurant),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
</div>
